<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Nội dung quảng cáo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <!-- Icon ứng dụng -->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Nhãn "Ad" -->
                    <TextView
                        android:id="@+id/ad_label"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/ad_text_background2"
                        android:gravity="center"
                        android:text="Ad"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <!-- Tiêu đề quảng cáo -->
                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="Phục hồi ảnh và dữ liệu đã xóa"
                        android:textColor="@color/primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Your recovertore deleted files filesfilesfilesfilesfilesfilesfilesfiles files "
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout> <!-- Mô tả quảng cáo -->

        </LinearLayout>


        <!-- Nút Call-To-Action -->
        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/outline_button"
            android:minWidth="80dp"
            android:paddingHorizontal="10dp"
            android:text="CÀI ĐẶT"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
